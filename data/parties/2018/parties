#!/usr/bin/env python3

from json import dumps
from collections import OrderedDict


def name_to_code(name):
    return 'p' + ''.join(word[0].lower() for word in name.split())


parties = OrderedDict([
    (name_to_code(pdata['name']), pdata)
    for pdata in [
        {
