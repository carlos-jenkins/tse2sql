            'colors': {
                'primary': '#0055a5',
                'secondary': '#fecc17',
            },
        }, {
            'name': 'Accesibilidad sin Exclusión',
            'colors': {
                'primary': '#0062a8',
                'secondary': '#ffffff',
            },
        }, {
            'name': 'De los Trabajadores',
            'colors': {
                'primary': '#da2127',
                'secondary': '#fef200',
            },
        }, {
            'name': 'Frente Amplio',
            'colors': {
                'primary': '#f6ed08',
                'secondary': '#000000',
            },
        }, {
            'name': 'Integración Nacional',
            'colors': {
